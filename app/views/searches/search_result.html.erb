<h2>検索結果</h2>

<div class="column">
    <ul class="items">
        <% @flowers.each do |flower| %>
            <li class="image-and-link">
                <ul>
                    <li><%= link_to image_tag("#{flower.image_url}", class: "flower-images"), "/searches/#{flower.id}" %></li>
                    <li><%= link_to flower.name, "/searches/#{flower.id}" %></li>
                </ul>
            </li>
        <% end %>
    </ul>
    <%= paginate @flowers %>
</div>
