<h1>Home page</h1>
<p>This is the home page for flower_app.</p>

<div class="search-form">
    <%= form_with url: search_path, local: true, method: :get do |f| %>
        <%= f.text_field :word %>
        <%= f.select :range, options_for_select([["花の名前"], ["花言葉"]]) %>
        <%= f.submit "検索", class: "btn btn-primary" %>
    <% end %>
</div>

<%= render "layouts/selectbox" %>